/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname,
.userinfo-gender {
  color: #aaa;
}

.userinfo-gender{
  margin-top: 10px;
}

.usermotto {
  margin-top: 200px;
}
.container{
  background: #e4e4e4;
  padding:10px;
}
.listItem{
  height: 55px;
  background: #fff;
  margin-bottom: 5px;
  border-radius: 4px;
  padding: 0 10px;
  vertical-align: middle;
}
.image{
  float: left;
  margin-top: 5px;
  margin-right: 30px;
}
.text{
  font-size: 16px;
  line-height: 18px;
  margin-top: 18px;
  display: inline-block;
}